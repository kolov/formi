<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <layout>
            <Pattern>%highlight(%-5level) %cyan(%logger{15}) - %msg %n</Pattern>
        </layout>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
